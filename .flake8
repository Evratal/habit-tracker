[flake8]
# Базовые настройки
max-line-length = 120
ignore =
    E203,  # Пробел перед : в срезах
    E266,  # Слишком много # для комментария
    W503,  # Разрыв строки перед бинарным оператором
    E501,  # Длина строки (управляется max-line-length)
    C901,  # Слишком сложная функция
exclude =
    .git,
    __pycache__,
    migrations,
    venv,
    .venv,
    env,
    .env,
    .github,
    scripts,
    docs,
    build,
    dist
per-file-ignores =
    # Игнорировать E402 (импорт не вверху файла) в __init__.py
    __init__.py: E402
    # Игнорировать F401 (неиспользуемый импорт) в миграциях
    */migrations/*.py: F401